# Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===============================================
# Server Configuration
# ===============================================
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# ===============================================
# Database Configuration
# ===============================================
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=smartcart_user
DATABASE_PASSWORD=your_secure_password_here
DATABASE_NAME=smartcart
DATABASE_CONNECTION_LIMIT=10

# ===============================================
# CORS Configuration
# ===============================================
CORS_ORIGIN=http://localhost:3003,http://localhost:3002
CORS_CREDENTIALS=true

# ===============================================
# Logging
# ===============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===============================================
# API Configuration
# ===============================================
API_VERSION=v1
API_TIMEOUT=30000

# ===============================================
# Authentication (if using JWT)
# ===============================================
JWT_SECRET=your_very_secure_jwt_secret_key_change_this
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRY=30d

# ===============================================
# Payment Gateway (if applicable)
# ===============================================
PAYMENT_GATEWAY=stripe
PAYMENT_API_KEY=pk_test_your_payment_key
PAYMENT_SECRET=sk_test_your_secret_key

# ===============================================
# Email Configuration (if applicable)
# ===============================================
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@smartcart.com

# ===============================================
# Session Configuration
# ===============================================
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=3600000

# ===============================================
# File Upload
# ===============================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/var/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# ===============================================
# Cache Configuration
# ===============================================
CACHE_ENABLED=true
CACHE_TTL=3600

# ===============================================
# Third-party Services
# ===============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===============================================
# Monitoring & Analytics
# ===============================================
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
