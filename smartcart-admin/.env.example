# Admin Dashboard Environment Configuration Template
# Copy this file to .env and fill in your actual values
# Note: Variables must be prefixed with REACT_APP_ to be accessible in React

# ===============================================
# API Configuration
# ===============================================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=30000

# ===============================================
# Application Settings
# ===============================================
REACT_APP_ENV=development
REACT_APP_APP_NAME=SmartCart Admin
REACT_APP_CUSTOMER_APP_URL=http://localhost:3003

# ===============================================
# Authentication
# ===============================================
REACT_APP_AUTH_ENABLED=true
REACT_APP_AUTO_LOGOUT=true
REACT_APP_SESSION_TIMEOUT=3600000

# ===============================================
# Analytics & Monitoring
# ===============================================
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# ===============================================
# Admin Features
# ===============================================
REACT_APP_FEATURE_DASHBOARD=true
REACT_APP_FEATURE_USER_MANAGEMENT=true
REACT_APP_FEATURE_PRODUCT_MANAGEMENT=true
REACT_APP_FEATURE_ORDER_MANAGEMENT=true
REACT_APP_FEATURE_PAYMENT_MANAGEMENT=true
REACT_APP_FEATURE_ANALYTICS=true
REACT_APP_FEATURE_REPORTS=true
REACT_APP_FEATURE_SETTINGS=true

# ===============================================
# UI Configuration
# ===============================================
REACT_APP_ITEMS_PER_PAGE=20
REACT_APP_THEME=light
REACT_APP_DATE_FORMAT=YYYY-MM-DD HH:mm:ss
REACT_APP_CURRENCY_SYMBOL=$
REACT_APP_CURRENCY_CODE=USD

# ===============================================
# Storage Configuration
# ===============================================
REACT_APP_STORAGE_KEY_PREFIX=smartcart_admin_
REACT_APP_ENABLE_LOCAL_STORAGE=true

# ===============================================
# Advanced Settings
# ===============================================
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_AUTO_REFRESH_INTERVAL=300000
REACT_APP_MAX_UPLOAD_SIZE=52428800
