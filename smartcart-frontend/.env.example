# Frontend Environment Configuration Template
# Copy this file to .env and fill in your actual values
# Note: Variables must be prefixed with REACT_APP_ to be accessible in React

# ===============================================
# API Configuration
# ===============================================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=30000

# ===============================================
# Application Settings
# ===============================================
REACT_APP_ENV=development
REACT_APP_APP_NAME=SmartCart
REACT_APP_ADMIN_URL=http://localhost:3002

# ===============================================
# Analytics & Monitoring
# ===============================================
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# ===============================================
# Payment Gateway
# ===============================================
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your_public_key
REACT_APP_PAYMENT_ENABLED=true

# ===============================================
# Feature Flags
# ===============================================
REACT_APP_FEATURE_PAYMENT_INTERRUPT=true
REACT_APP_FEATURE_RATINGS=true
REACT_APP_FEATURE_REVIEWS=true
REACT_APP_FEATURE_RECOMMENDATIONS=true

# ===============================================
# Storage Configuration
# ===============================================
REACT_APP_STORAGE_KEY_PREFIX=smartcart_
REACT_APP_ENABLE_LOCAL_STORAGE=true

# ===============================================
# Session Configuration
# ===============================================
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_AUTO_LOGOUT=true

# ===============================================
# UI Configuration
# ===============================================
REACT_APP_ITEMS_PER_PAGE=12
REACT_APP_THEME=light
REACT_APP_DATE_FORMAT=YYYY-MM-DD
